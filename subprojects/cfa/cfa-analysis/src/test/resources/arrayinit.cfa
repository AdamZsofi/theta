main process cfa {
    var arr: [int]->int
    var asd: int

    init loc L0
    loc L01
    loc L1
    loc L2
    final loc END
    error loc ERR

    L0 -> L01 { asd := 1}
    L01 -> L1 { arr := [ 0 <- 1, 1 <- asd + 2, default <- 0 ] }

    L1 -> L2 { assume arr[0] = 1 and arr[34] = 0 }
    L1 -> ERR { assume not (arr[0] = 1 and arr[34] = 0) }

    L2 -> END { assume arr[1] = 2 }
    L2 -> ERR { assume not (arr[1] = 2) }
}